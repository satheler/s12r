{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "build",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "baseUrl": "./",
    "rootDir": "./",
    "sourceMap": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
